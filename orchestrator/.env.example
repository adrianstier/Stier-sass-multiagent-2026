# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/orchestrator

# =============================================================================
# Redis/Celery Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# Authentication (CRITICAL: Change in production!)
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_USE_SECURE_KEY
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Anthropic API (required for LLM calls)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# =============================================================================
# LLM Settings
# =============================================================================
LLM_MODEL=claude-sonnet-4-20250514
LLM_MAX_TOKENS=4096

# =============================================================================
# Orchestrator Settings
# =============================================================================
MAX_ITERATIONS=50
TASK_TIMEOUT_SECONDS=300
MAX_RETRIES=3

# =============================================================================
# Quality Gates
# =============================================================================
REQUIRE_CODE_REVIEW=true
REQUIRE_SECURITY_REVIEW=true

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT=120
RUN_CREATE_RATE_LIMIT=10

# =============================================================================
# Cost Controls
# =============================================================================
DEFAULT_RUN_TOKEN_BUDGET=100000
DEFAULT_ORG_MONTHLY_LIMIT=1000000

# =============================================================================
# Observability
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
REDACT_SENSITIVE_DATA=true

# =============================================================================
# CORS
# =============================================================================
CORS_ORIGINS=*
